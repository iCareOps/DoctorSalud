@model IEnumerable<DoctorSalud.PacienteDS>
@{

    ViewBag.Title = "Index";


    var oUser = (Usuarios)HttpContext.Current.Session["User"];

    DoctorSalud_Entities db = new DoctorSalud_Entities();
